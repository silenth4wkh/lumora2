{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["px","em","rem","vh","vw","%"],
      "spacingScale": {
        "steps": 8
      },
      "blockGap": "1.25rem"
    },
    "color": {
      "palette": [
        {"slug":"bg","name":"Background","color":"#0B0B0B"},
        {"slug":"fg","name":"Foreground","color":"#EDEDED"},
        {"slug":"muted","name":"Muted","color":"#9AA0A6"},
        {"slug":"brand","name":"Brand","color":"#FFE200"},
        {"slug":"card","name":"Card","color":"#111111"}
      ],
      "gradients": []
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Apple Color Emoji, Segoe UI Emoji",
          "slug": "inter",
          "name": "Inter (system stack)"
        }
      ],
      "fluid": true,
      "fontSizes": [
        {"slug":"xs","size":"clamp(.75rem,.8vw,.875rem)","name":"XS"},
        {"slug":"sm","size":"clamp(.875rem,1vw,1rem)","name":"S"},
        {"slug":"base","size":"clamp(1rem,1.1vw,1.125rem)","name":"Base"},
        {"slug":"lg","size":"clamp(1.125rem,1.3vw,1.25rem)","name":"L"},
        {"slug":"xl","size":"clamp(1.25rem,1.6vw,1.5rem)","name":"XL"},
        {"slug":"2xl","size":"clamp(1.5rem,2.2vw,2rem)","name":"2XL"},
        {"slug":"3xl","size":"clamp(2rem,3.5vw,3rem)","name":"3XL"},
        {"slug":"4xl","size":"clamp(2.5rem,5vw,3.75rem)","name":"4XL"}
      ],
      "lineHeight": {
        "body": 1.6,
        "heading": 1.1
      }
    },
    "custom": {
      "radius": "14px",
      "shadow": "0 20px 60px rgba(0,0,0,.35)",
      "containerMax": "1200px"
    },
    "blocks": {
      "core/button": {
        "color": {"text":"#0B0B0B","background":"#FFE200"},
        "border": {"radius":"9999px"},
        "typography": {"fontSize":"clamp(1rem,1.2vw,1.125rem)","fontWeight":"600"},
        "spacing": {"padding":{"top":".75rem","right":"1.25rem","bottom":".75rem","left":"1.25rem"}}
      },
      "core/heading": {
        "typography": {"lineHeight":"1.1"},
        "color": {"text":"#EDEDED"}
      },
      "core/paragraph": {
        "color": {"text":"#EDEDED"}
      },
      "core/group": {
        "spacing": {"padding":{"top":"clamp(2rem,4vw,4rem)","bottom":"clamp(2rem,4vw,4rem)"}}
      }
    }
  },
  "styles": {
    "color": {
      "background": "#0B0B0B",
      "text": "#EDEDED"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": 1.6
    }
  },
  "templates": {
  },
  "templateParts": {
  }
}

